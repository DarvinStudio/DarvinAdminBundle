{% extends 'DarvinAdminBundle::layout.html.twig' %}

{% form_theme form 'DarvinAdminBundle:Form:fields.html.twig' %}

{% trans_default_domain 'admin' %}

{% set heading = (meta.baseTranslationPrefix ~ 'action.edit.title') | trans({ '%entity%': entity }) %}

{% block breadcrumbs %}{{ admin_breadcrumbs(meta, parent_entity, heading) }}{% endblock %}

{% block heading %}{{ heading }}{% endblock %}

{% block content %}
    {{ admin_widget_actions(entity, { 'view_type': 'edit' }) }}

    {% include 'DarvinAdminBundle:Crud/widget:form.html.twig' with {
        'field_groups': meta.configuration.form.edit.field_groups,
    } %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
