{% extends 'DarvinAdminBundle::layout.html.twig' %}

{% trans_default_domain 'admin' %}

{% block breadcrumbs %}{{ admin_breadcrumbs(parent_entity) }}{% endblock %}

{% block heading %}{{ (meta.baseTranslationPrefix ~ 'action.index.title') | trans }}{% endblock %}

{% block content %}

    {% set pagination_html = knp_pagination_render(pagination) %}

    {{ pagination_html | raw }}
    <table class="property_forms">
        <thead>
            <tr>
                {% for field, item in view.head.items if item.width %}
                    <th colspan="{{ item.width }}">
                        {% if item.sortable %}
                            {{ knp_pagination_sortable(pagination, item.content | raw, 'o.' ~ field) }}
                        {% else %}
                            {{ item.content | raw }}
                        {% endif %}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in view.body.rows %}
                <tr>
                    {% for item in row.items %}
                        <td>{{ item.content | raw }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ pagination_html | raw }}
{% endblock %}
