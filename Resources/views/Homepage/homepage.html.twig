{% extends 'DarvinAdminBundle::layout.html.twig' %}

{% trans_default_domain 'admin' %}

{% block content %}
    <h1>{% trans %}homepage.action.homepage.title{% endtrans %}</h1>

    {{ admin_menu('DarvinAdminBundle:Homepage:menu.html.twig') }}

    <ul>
        {% for name, widget in dashboard.widgets %}
            <li>
                <div>
                    <span class="{{ name }}"></span>
                    <span>
                        {{ ('dashboard.widget.' ~ name ~ '.title') | trans }}<br>
                        {{ ('dashboard.widget.' ~ name ~ '.description') | trans }}
                    </span>
                    {% if widget.moduleUrl %}
                        <a href="{{ widget.moduleUrl }}">{% trans %}dashboard.widget.module_link{% endtrans %}</a>
                    {% endif %}
                </div>
                <div>{{ widget.content | raw }}</div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
