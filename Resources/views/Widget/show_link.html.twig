{% trans_default_domain 'admin' %}

{% set title = (translation_prefix ~ 'action.show.title')|trans({'%entity%': entity|trans}) %}

<a href="{{ admin_path(entity, entity_class, 'show') }}"
   data-title="{{ title }}"
   class="colorbox_ajax{% if not text_link %} edit_element show{% endif %}">
    {% if text_link %}
        {{ entity }}
    {% else %}
        <span>{{ title }}</span>
    {% endif %}
</a>
