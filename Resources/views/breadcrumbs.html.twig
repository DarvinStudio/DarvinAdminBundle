{% trans_default_domain 'admin' %}

<div class="path">
    {% for crumb in crumbs %}
        {% if crumb.url and crumb.url != app.request.requestUri %}
            <a href="{{ crumb.url }}">{{ crumb.title|trans }}</a>
        {% else %}
            <span>{{ crumb.title|trans }}</span>
        {% endif %}
    {% endfor %}
</div>
