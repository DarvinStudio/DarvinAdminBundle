{% trans_default_domain 'admin' %}

{{ form_start(form, {'attr': {'class': 'js-form'}}) }}

    <div class="content-block__content">

        {% if form is empty %}
            <p class="h2">{% trans %}common.empty_list{% endtrans %}</p>
        {% else %}
            <div class="table" data-simplebar data-simplebar-auto-hide="false">
                <table>
                    <thead>
                    <tr>
                        <th>
{#                            <label class="custom-checkbox" data-type="actions"#}
{#                                   title="{% trans %}crud.action.batch_delete.check_all{% endtrans %}">#}
{#                                <input type="checkbox" class="js-batch-delete-check-all" autocomplete="off">#}
{#                                <span></span>#}
{#                            </label>#}
                        </th>
                        <th data-size="xl">Название</th>
                        <th data-exact-size="620">Описание</th>
                        <th data-size="free">Команда для выполнения чистки</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for name, row in form if name != '_token' %}
                        {% for child in row %}
                            <tr>
                                <td>
                                    <div class="table-row__actions">
                                        <label class="custom-checkbox" title="{% trans %}crud.action.batch_delete.check{% endtrans %}">
                                            {{ form_widget(child) }}
                                            <span></span>
                                        </label>
                                    </div>
                                </td>
                                <td data-size="xl">{{ ('cache.'~child.vars.value~'.title')|trans }}</td>
                                <td data-exact-size="620">
                                    <div class="multiple-rows" data-rows="3">
                                        {{ ('cache.'~child.vars.value~'.description')|trans }}
                                    </div>
                                </td>
                                <td data-size="free">{{ child.vars.label|raw }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        {% endif %}

    </div>
    <button id="{{ form.vars.id }}_submit" type="submit" style="display: none;"></button>
{{ form_end(form) }}
