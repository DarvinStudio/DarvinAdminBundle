{% trans_default_domain 'admin' %}

{% set route_params = { (association ~ ''): parent_id } %}

<ul>
    {% if children_count > 0 %}
        <li>
            <a href="{{ admin_path(child_class, constant('Darvin\\AdminBundle\\Route\\AdminRouter::TYPE_INDEX'), route_params) }}">
                {{ (translation_prefix ~ 'action.index.link') | trans }}&nbsp;({{ children_count }})
            </a>
        </li>
    {% endif %}
    <li>
        <a href="{{ admin_path(child_class, constant('Darvin\\AdminBundle\\Route\\AdminRouter::TYPE_NEW'), route_params) }}">
            {{ (translation_prefix ~ 'action.new.link') | trans }}
        </a>
    </li>
</ul>
