{% trans_default_domain 'admin' %}

{% set entity_name = ('log.entity.object_names.' ~ entity_name) | trans %}

{% if admin_route_exists(entity_class, constant('Darvin\\AdminBundle\\Route\\AdminRouter::TYPE_SHOW')) %}
    <a class="fancybox_ajax"
       href="{{ admin_path(entity_class, constant('Darvin\\AdminBundle\\Route\\AdminRouter::TYPE_SHOW'), { 'id': entity_id }) }}">
        {{ entity_name }}
    </a>
{% else %}
    {{ entity_name }}
{% endif %}
